{
  "name": "admin-panel",
  "private": true,
  "version": "0.0.1",
  "description": "Generic admin panel application",
  "scripts": {
    "start": "ts-node ./src/server.ts",
    "start:dev": "nodemon",
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix",
    "test": "mocha -r ts-node/register tests/**/*.ts"
  },
  "author": "jeko2000",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "http-status-codes": "^2.1.4",
    "morgan": "^1.10.0",
    "nodemailer": "^6.6.3",
    "pg": "^8.7.1",
    "validator": "^13.6.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.0.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.7.1",
    "@types/nodemailer": "^6.4.4",
    "@types/pg": "^8.6.1",
    "@types/validator": "^13.6.3",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "eslint": "^7.32.0",
    "fp-ts": "^2.11.1",
    "io-ts": "^2.2.16",
    "io-ts-types": "^0.5.16",
    "mocha": "^9.1.0",
    "monocle-ts": "^2.3.11",
    "newtype-ts": "^0.3.4",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules",
      "dist"
    ],
    "watch": [
      "./src",
      "./config"
    ],
    "exec": "./node_modules/.bin/ts-node src",
    "ext": "ts"
  }
}
